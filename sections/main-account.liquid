{% render 'account-aside' %}

<div class="account-content">
  <div class="account-wrapper">
    <div class="account-target section-pt" id="orders" style="scroll-margin-block-start: var(--header-spacer)">
      {% paginate customer.orders by 20 %}
        {%- if customer.orders.size > 0 -%}
          <table role="table" class="w-full table-auto border-collapse border-b border-primary md:border">
            <caption class="sr-only">
              {{ 'customer.orders.title' | t }}
            </caption>
            <thead role="rowgroup" class="hidden md:table-header-group">
              <tr role="row">
                <th id="ColumnOrder" scope="col" role="columnheader" class="p-4 text-left">
                  {{ 'customer.orders.order_number' | t }}
                </th>
                <th id="ColumnDate" scope="col" role="columnheader" class="p-4 text-left">
                  {{ 'customer.orders.date' | t }}
                </th>
                <th id="ColumnPayment" scope="col" role="columnheader" class="p-4 text-left">
                  {{ 'customer.orders.payment_status' | t }}
                </th>
                <th id="ColumnFulfillment" scope="col" role="columnheader" class="p-4 text-left">
                  {{ 'customer.orders.fulfillment_status' | t }}
                </th>
                <th id="ColumnTotal" scope="col" role="columnheader" class="p-4 text-right">
                  {{ 'customer.orders.total' | t }}
                </th>
              </tr>
            </thead>
            <tbody role="rowgroup">
              {%- for order in customer.orders -%}
                <tr role="row" class="flex w-full flex-col justify-start border-t border-primary md:table-row">
                  <td
                    id="RowOrder"
                    role="cell"
                    headers="ColumnOrder"
                    data-label="{{ 'customer.orders.order_number' | t }}"
                    class="flex items-center pb-2 pt-6 before:grow before:content-[attr(data-label)] md:table-cell md:p-4 md:before:content-none"
                  >
                    <a
                      href="{{ order.customer_url }}"
                      aria-label="{{ 'customer.orders.order_number_link' | t: number: order.name }}"
                    >
                      {{ order.name }}
                    </a>
                  </td>
                  <td
                    headers="RowOrder ColumnDate"
                    role="cell"
                    data-label="{{ 'customer.orders.date' | t }}"
                    class="flex items-center py-2 before:grow before:content-[attr(data-label)] md:table-cell md:p-4 md:before:content-none"
                  >
                    {{ order.created_at | time_tag: format: 'date' }}
                  </td>
                  <td
                    headers="RowOrder ColumnPayment"
                    role="cell"
                    data-label="{{ 'customer.orders.payment_status' | t }}"
                    class="flex items-center py-2 before:grow before:content-[attr(data-label)] md:table-cell md:p-4 md:before:content-none"
                  >
                    {{ order.financial_status_label }}
                  </td>
                  <td
                    headers="RowOrder ColumnFulfillment"
                    role="cell"
                    data-label="{{ 'customer.orders.fulfillment_status' | t }}"
                    class="flex items-center py-2 before:grow before:content-[attr(data-label)] md:table-cell md:p-4 md:before:content-none"
                  >
                    {{ order.fulfillment_status_label }}
                  </td>
                  <td
                    headers="RowOrder ColumnTotal"
                    role="cell"
                    data-label="{{ 'customer.orders.total' | t }}"
                    class="flex items-center pb-6 pt-2 text-right before:grow before:content-[attr(data-label)] md:table-cell md:p-4 md:before:content-none"
                  >
                    {{ order.total_price | money_with_currency }}
                  </td>
                </tr>
              {%- endfor -%}
            </tbody>
          </table>
        {%- else -%}
          <p>{{ 'customer.orders.none' | t }}</p>
        {%- endif -%}

        {%- if paginate.pages > 1 -%}
          {%- if paginate.parts.size > 0 -%}
            <nav class="mb-10 mt-10" role="navigation" aria-label="{{ 'general.pagination.label' | t }}">
              <ul role="list" class="flex items-center justify-center gap-6">
                {%- if paginate.previous -%}
                  <li>
                    <a href="{{ paginate.previous.url }}" aria-label="{{ 'general.pagination.previous' | t }}">
                      <svg aria-hidden="true" focusable="false" viewBox="0 0 10 6" class="h-4 w-4 rotate-90">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
                      </svg>
                    </a>
                  </li>
                {%- endif -%}

                {%- for part in paginate.parts -%}
                  <li>
                    {%- if part.is_link -%}
                      <a href="{{ part.url }}" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">
                        {{- part.title -}}
                      </a>
                    {%- else -%}
                      {%- if part.title == paginate.current_page -%}
                        <span aria-current="page" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">
                          {{- part.title -}}
                        </span>
                      {%- else -%}
                        <span>{{ part.title }}</span>
                      {%- endif -%}
                    {%- endif -%}
                  </li>
                {%- endfor -%}

                {%- if paginate.next -%}
                  <li>
                    <a href="{{ paginate.next.url }}" aria-label="{{ 'general.pagination.next' | t }}">
                      <svg aria-hidden="true" focusable="false" viewBox="0 0 10 6" class="h-4 w-4 -rotate-90">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
                      </svg>
                    </a>
                  </li>
                {%- endif -%}
              </ul>
            </nav>
          {%- endif -%}
        {%- endif -%}
      {% endpaginate %}
    </div>

    <div class="account-target-info section-pt" id="info" style="scroll-margin-block-start: var(--header-spacer)">
      <just-validate class="block w-full">
        {%- form 'create_customer', novalidate: 'novalidate', class: 'w-full account-create' -%}
          <div class="col-span-2">
            <input
              type="email"
              name="customer[email]"
              id="RegisterForm-email"
              class="inp email-required col-span-2"
              {% if form.email %}
                value="{{ form.email }}"
              {% endif %}
              spellcheck="false"
              autocapitalize="off"
              autocomplete="email"
              aria-required="true"
              placeholder="{{ 'customer.register.email' | t }}*"
              {% if form.errors contains 'email' %}
                aria-invalid="true"
                aria-describedby="RegisterForm-email-error"
              {% endif %}
            >
            {%- if form.errors contains 'email' -%}
              <span id="RegisterForm-email-error" class="error-text">
                {{ form.errors.translated_fields.email | capitalize }}
                {{ form.errors.messages.email }}.
              </span>
            {%- endif -%}
          </div>
          <div class="col-span-2">
            <input
              type="password"
              name="customer[password]"
              id="RegisterForm-password"
              class="inp validation-password"
              aria-required="true"
              placeholder="{{ 'customer.register.password' | t }}*"
              {% if form.errors contains 'password' %}
                aria-invalid="true"
                aria-describedby="RegisterForm-password-error"
              {% endif %}
            >
            {%- if form.errors contains 'password' -%}
              <span id="RegisterForm-password-error" class="error-text">
                {{ form.errors.translated_fields.password | capitalize }}
                {{ form.errors.messages.password }}
              </span>
            {%- endif -%}
          </div>

          <div class="col-span-2">
            <input
              type="password"
              id="RegisterForm-password-confirm"
              class="inp validation-password-confirm"
              aria-required="true"
              placeholder="{{ 'customer.register.confirm_password' | t }}*"
              {% if form.errors contains 'password' %}
                aria-invalid="true"
                aria-describedby="RegisterForm-password-error"
              {% endif %}
            >
            {%- if form.errors contains 'password' -%}
              <span id="RegisterForm-password-error-confirm_password" class="error-text">
                {{ form.errors.translated_fields.password | capitalize }}
                {{ form.errors.messages.password }}
              </span>
            {%- endif -%}
          </div>

          <input
            type="text"
            name="customer[first_name]"
            id="RegisterForm-FirstName"
            {% if form.first_name %}
              value="{{ form.first_name }}"
            {% endif %}
            class="inp required-text"
            placeholder="{{ 'customer.register.first_name' | t }}"
            autocomplete="given-name"
          >
          <input
            type="text"
            name="customer[last_name]"
            id="RegisterForm-LastName"
            class="inp required-text"
            placeholder="{{ 'customer.register.last_name' | t }}"
            {% if form.last_name %}
              value="{{ form.last_name }}"
            {% endif %}
            autocomplete="family-name"
          >

          <div class="contact_country col-span-2">
            <country-list>
              <cart-select client:visible>
                <div class="custom-select">
                  <label class="field__label" for="ContactForm-country">Country/Region</label>

                  <select id="ContactForm-country" name="customer[note][custom.country]"></select>
                  <div class="select-selected">Country</div>
                </div>
              </cart-select>
            </country-list>
          </div>

          <date-formatter class="col-span-2 block">
            <input
              type="text"
              id="RegisterForm-BirthDate"
              class="inp date-validation"
              placeholder="{{ 'customer.register.birthday' | t }}"
              {% if form.birthday %}
                value="{{ form.birthday }}"
              {% endif %}
              autocomplete="family-name"
            >
            <input type="date" name="customer[note][facts.birth_date]" hidden>
          </date-formatter>

          <button class="btn btn-blue account-createbtn" type="submit">
            {{ 'customer.register.submit' | t }}
          </button>

          <a href="{{ routes.account_login_url }}" class="btn btn-white col-span-2">
            {{ 'customer.login_page.cancel' | t }}
          </a>

          <div class="col-span-2">
            <label class="checkbox account-checkbox">
              <input type="checkbox" required checked>
              <span class="checkbox-box"></span>
              <span>
                I agree to the <a class="link" href="/policies/terms-and-conditions">terms and conditions</a> and
                <a class="link" href="/policies/privacy-policy">privacy policy.</a>
              </span>
            </label>

            <label class="checkbox account-checkbox">
              <input type="hidden" name="customer[accepts_marketing]" value="false">
              <input type="checkbox" name="customer[accepts_marketing]" value="true" checked>
              <span class="checkbox-box"></span>
              <span> Sign me up for the mailing list. </span>
            </label>
          </div>

          <div id="errors-container_custom-name"></div>
        {%- endform -%}
      </just-validate>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Account",
  "class": "account-main wrapper"
}
{% endschema %}
