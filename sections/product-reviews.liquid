<product-reviews class="product-reviews wrapper block" style="opacity: 0" client:visible>
  <h2 class="headline-2">Reviews</h2>

  <!-- Start of Judge.me code -->
  <div style="clear:both"></div>
  <div
    id="judgeme_product_reviews"
    class="jdgm-widget jdgm-review-widget"
    data-product-title="{{ product.title | escape }}"
    data-id="{{ product.id }}"
    data-auto-install="false"
  >
    {{ product.metafields.judgeme.widget }}
  </div>
  <!-- End of Judge.me code -->

  <div class="flex justify-end">
    <button class="collection-up" onclick="document.body.scrollIntoView({behavior: 'smooth'})" aria-label="go up">
      {% render 'icon-up' %}
    </button>
  </div>
</product-reviews>

{% schema %}
{
  "name": "Product reviews",
  "settings": []
}
{% endschema %}
