{% if section.settings.image != blank %}
  <picture>
    {% if section.settings.image_mobile != blank %}
      <source media="(max-width: 500px)" srcset="{{ section.settings.image_mobile | image_url: width: 500 }}">
    {% endif %}
    {{
      section.settings.image
      | image_url: width: 1920
      | image_tag:
        loading: 'eager',
        width: section.settings.image.width,
        height: section.settings.image.height,
        widths: '375, 412, 500, 750, 1100, 1500, 1780, 1920, 2000, 3000, 3840',
        alt: section.settings.image.alt
      | escape
    }}
  </picture>
{% endif %}

{% schema %}
{
  "name": "Main section",
  "tag": "section",
  "class": "main img-cover",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile image"
    }
  ]
}
{% endschema %}
