<menu-subscribe client:visible id="menu-subscribe">
  {% form 'customer', class: 'header-subscribe' %}
    <input type="hidden" name="contact[tags]" value="newsletter">
    <div class="header-wrapper">
      <div class="relative flex w-full">
        <input
          id="NewsletterForm--{{ section.id }}"
          type="email"
          name="contact[email]"
          class="input subscribe-input pr-70"
          value="{{ form.email }}"
          aria-required="true"
          autocorrect="off"
          autocapitalize="off"
          autocomplete="email"
          {% if form.errors %}
            autofocus
            aria-invalid="true"
            aria-describedby="Newsletter-error--{{ section.id }}"
          {% elsif form.posted_successfully? %}
            aria-describedby="Newsletter-success--{{ section.id }}"
          {% endif %}
          placeholder="{{ 'newsletter.label' | t }}"
          required
        >
        <label class="sr-only" for="NewsletterForm--{{ section.id }}">
          {{ 'newsletter.label' | t }}
        </label>
        <button
          type="submit"
          class="subscribe-submit"
          name="commit"
          id="Subscribe"
          aria-label="{{ 'newsletter.button_label' | t }}"
        >
          Subscribe
        </button>
      </div>
      {%- if form.errors -%}
        <small class="error-text" id="Newsletter-error--{{ section.id }}">
          {%- render 'icon-error' -%}
          {{- form.errors.translated_fields.email | capitalize }}
          {{ form.errors.messages.email -}}
        </small>
      {%- endif -%}
    </div>
    {%- if form.posted_successfully? -%}
      <h3 class="header-wrapper" id="Newsletter-success--{{ section.id }}" tabindex="-1">
        {% render 'icon-success' -%}
        {{- 'newsletter.success' | t }}
      </h3>
    {%- endif -%}
  {% endform %}
</menu-subscribe>
